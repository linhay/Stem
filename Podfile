# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'
project 'Template.xcodeproj'

def setup_pod
  use_frameworks!
  pod 'Template', :path => './'
  pod 'SwiftLint', :configurations => 'Debug'
end

target 'iOS' do
  setup_pod
end

target 'macOS' do
  setup_pod
end

target 'tvOS' do
  setup_pod
end
